general {
  colors = true
  interval = 1
  separator = " | "

  color_good = "#33bbff"
  color_bad = "#ffbb55"
  color_degraded = "#ccdc90"
}

order += "disk /"
order += "path_exists VPN"
order += "wireless wlan0"
order += "ethernet eth0"
order += "battery 0"
order += "memory"
order += "load"
order += "tztime local"

wireless wlan0 {
  format_up = "W: (%quality at %essid, %bitrate) %ip"
  format_down = "W: down"
}

ethernet eth0 {
  format_up = "E: %ip (%speed)"
  format_down = "E: down"
}

battery 0 {
  format = "%status %percentage %remaining %emptytime"
  format_down = "No battery"
  status_chr = "âš¡ CHR"
  status_bat = "ðŸ”‹ BAT"
  status_unk = "? UNK"
  status_full = "â˜» Full"
  path = "/sys/class/power_supply/BAT%d/uevent"
  low_threshold = 10
}

run_watch DHCP {
  pidfile = "/var/run/dhclient*.pid"
}

run_watch VPNC {
  # file containing the PID of a vpnc process
  pidfile = "/var/run/vpnc/pid"
}

path_exists VPN {
  # path exists when a VPN tunnel launched by nmcli/nm-applet is active
  path = "/proc/sys/net/ipv4/conf/tun0"
}

tztime utc {
  format = "%Y-%m-%d %H:%M:%S"
  hide_if_equals_localtime = true
}

tztime berlin {
  format = "%Y-%m-%d %H:%M:%S %Z"
  timezone = "Europe/Berlin"
}

load {
  format = "Load: %5min"
}

memory {
  format = "Mem: %used"
  threshold_degraded = "10%"
  format_degraded = "MEMORY: %free"
}

disk "/" {
  format = "%free"
}

read_file uptime {
  path = "/proc/uptime"
}

tztime local {
	format = "%l:%M:%S %P, %m-%d-%Y" # Default
} 

ddate {
	format = "%{%a, %b %d%}, %Y%N - %H"
} 
